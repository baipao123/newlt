<view class="page">
    <view class="indexList" hidden="{{!showIndex}}">
        <view class="indexBlock" wx:for="{{qNum}}" wx:for-index="tid" wx:key="indexBlock-key">
            <view class="header">{{item.name}}</view>
            <view class="weui-flex offsetList">
                <view class="weui-flex__item text-m index {{q.status > 0 ? (q.status == 2 ? 'success' : (q.status== 3 ? 'fail' : 'done')) : ''}}" wx:for="{{item.questions}}" wx:for-index="i" wx:for-item="q" wx:key="item-key" data-offset="{{q.offset}}" bindtap="goSingle">{{q.offset}}</view>
            </view>
        </view>
    </view>
    <view class="questions" hidden="{{showIndex}}">
        <!--<questionInfo bindMoreList="moreList" list="{{questions}}" offset="{{offset}}"/>-->
        <questionList bindMoreList="moreList" questions="{{questions}}" offset="{{offset}}" maxOffset="{{maxOffset}}" eid="{{eid}}" info="{{title}}"/>
    </view>
    <include src="/pages/common/footer.wxml"/>
    <view style="height:100rpx"/>
    <view class="bottom" catchtap="empty">
        <view class="weui-flex bg-green a-c text-m text-white">
            <view class="weui-flex__item" bindtap="examIndex"><span class="myIcon margin icon-list-light"/>{{showIndex ? '去考试' : '题序'}}</view>
            <block wx:if="{{exam.status == 0}}">
                <view class="weui-flex__item"><span class="myIcon margin icon-clock"/>{{exam.timeStr}}</view>
                <view class="weui-flex__item" bindtap="finish"><span class="myIcon margin icon-form"/>交卷</view>
            </block>
        </view>
    </view>
</view>